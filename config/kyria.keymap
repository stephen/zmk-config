#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
	keymap {
		compatible = "zmk,keymap";

		default_layer {
// ---------------------------------------------------------------------------------------------------------------------------------
// |  TAB  |  Q  |  W  |  E   |  R   |  T   |                                          |  Y   |  U    |  I    |  O   |   P   |   \  |
// |  ESC  |  A  |  S  |  D   |  F   |  G   |                                          |  H   |  J    |  K    |  L   |   ;   |   '  |
// | SHIFT |  Z  |  X  |  C   |  V   |  B   | LGUI    |         |  |         | RGUI    |  N   |  M    |  ,    |  .   |   /   | SHIFT |
//                     | PLAY | LALT | BPSC | LCTRL   |  GUI    |  |  GUI    |  SPACE  | TAB  | BTCLR | BTNXT |
			bindings = <
	&kp TAB   &kp Q &kp W &kp E &kp R &kp T                                                &kp Y &kp U  &kp I     &kp O   &kp P    &kp BSLH
	&kp ESC   &kp A &kp S &kp D &kp F &kp G                                                &kp H &kp J  &kp K     &kp L   &kp SEMI &kp SQT
	&kp LSHFT &kp Z &kp X &kp C &kp V &kp B &kp LGUI &kp LSHFT        &kp LSHFT &kp RGUI &kp N &kp M  &kp COMMA &kp DOT &kp FSLH &kp RSHFT
	                 &kp C_PLAY_PAUSE &kp LALT &kp BSPC &kp LCTRL &kp LGUI        &kp RGUI  &kp  RET   &kp SPACE &bt BT_CLR &bt BT_NXT
			>;

			sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp C_VOL_UP C_VOL_DN>;
		};
	};
};
